{
  "name": "ews-weekly-reports",
  "version": "3.0.0",
  "description": "EWS Distribution Weekly Report Tool - Ultimate Edition with Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "lint": "eslint .",
    "build": "webpack --mode production",
    "db:migrate": "node api/db/migrate.js",
    "deploy:vercel": "vercel --prod",
    "deploy:railway": "railway up",
    "docker:build": "docker build -t ews-reports .",
    "docker:run": "docker run -p 3000:3000 ews-reports"
  },
  "keywords": [
    "weekly-reports",
    "distribution",
    "kpi",
    "analytics",
    "task-management"
  ],
  "author": "EWS GmbH",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "body-parser": "^1.20.2",
    "@neondatabase/serverless": "^0.9.0",
    "drizzle-orm": "^0.29.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "@types/node": "^20.10.6",
    "@types/express": "^4.17.21"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ews-gmbh/weekly-reports.git"
  }
}
